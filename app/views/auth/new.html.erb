<div class="container mt-4">
  <div class="row">
    <div class="col-md-12 col-sm-12">
      <h4>Change Password</h4>
    </div>
  </div>
  <div class="row mt-4">
    <div class="col-md-3 col-sm-3"></div>
    <div class="col-md-6 col-sm-6">
      <div class="card">
    <div class="card-body p-4">
      <h5>Change Password</h5>
      <% if alert.present? %>
        <div class="alert alert-<%= alert %>" role="alert">
          <%= notice %>
        </div>
      <% end %>
      <%= form_for :user, url: '/change_password', method: :post do |form| %>
        <div class="row">
          <div class="col-md-12 col-sm-12 mb-3">
            <%= form.label :password, "Old Password" %>
            <%= form.password_field :password, class: "form-control", placeholder: "Enter old password" %>
          </div>
          <div class="col-md-12 col-sm-12 mb-3">
            <%= form.label :new_password, "New Password" %>
            <%= form.password_field :new_password, class: "form-control", placeholder: "Enter new password" %>
          </div>
        </div>
        <div class="d-flex flex-row-reverse">
          <button class="btn btn-success">Change Password</button>
        </div>
      <% end %>
  </div>
    </div>
    <div class="col-md-3 col-sm-3"></div>
  </div>
</div>

<script>
  $(document).ready(()=>{
    setTimeout(() => {
      $(".alert").hide();
    }, 3000);
  });
</script>