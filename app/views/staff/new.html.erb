<div class="container mt-4">
  <div class="row">
    <div class="col-md-6 col-sm-6">
    <h4>Staff</h4>
  </div>
  <div class="col-md-6 col-sm-6 mb-3" style="display: flex;justify-content: right;align-items: center;">
    <%# <button class="btn btn-danger" style="margin-right: 10px;">Delete Staff</button> %>
    <a href="/staff" class="btn btn-warning" style="margin-right: 10px;">Cancel</a>
    <button class="btn btn-primary" id="add-staff">Save</button>
  </div>
  </div>
  <div class="card">
    <div class="card-body p-4">
      <h5>Add Staff</h5>
      <% if alert %>
      <div class="alert alert-<%= alert %>" role="alert">
        <%= notice %>
      </div>
      <% end %>
      <%= form_for :user, url: '/staff',id: 'staff-form', method: :post do |form| %>
        <div class="row">
          <div class="col-md-6 col-sm-12 mt-2">
            <%= form.label :name, "Name", class: "form-label" %> <span style="color:red">*</span>
            <%= form.text_field :name, class: "form-control", :required => true, placeholder: "Enter your name" %>
          </div>
          <div class="col-md-6 col-sm-12 mt-2">
            <%= form.label :email, "Email", class: "form-label" %><span style="color:red">*</span>
            <%= form.email_field :email, class: "form-control",:required => true, placeholder: "Enter your email" %>
          </div>
          <div class="col-md-6 col-sm-12 mt-2">
            <%= form.label :role_id, "Role", class: "form-label" %><span style="color:red">*</span>
            <%= form.select :role_id, options_from_collection_for_select(@roles, :id, :name), { include_blank: 'Select a role' }, { class: "form-select" } %>
          </div>
          <div class="col-md-6 col-sm-12 mt-2">
            <%= form.label :phone, "Phone Number", class: "form-label" %><span style="color:red">*</span>
            <%= form.text_field :phone, class: "form-control",:required => true, placeholder: "Enter your phone number" %>
          </div>
          <div class="col-md-6 col-sm-12 mt-2">
            <%= form.label :joining_date, "Joining Date", class: "form-label" %><span style="color:red">*</span>
            <%= form.date_field :joining_date, class: "form-control",:required => true, placeholder: "Select your joining date" %>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>

<script>
  $(document).ready(()=>{
    $("#add-staff").click((e)=>{
      $("#staff-form").submit(); 
    });

    setTimeout(() => {
      $(".alert").hide();
    }, 3000);
  });
</script>